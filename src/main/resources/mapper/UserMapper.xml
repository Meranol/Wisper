<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.wisper_one.Login.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.example.wisper_one.Login.POJO.UserPo">
        <id property="id" column="id"/>
        <result property="publicId" column="public_id"/>
        <result property="username" column="username"/>
        <result property="passwordHash" column="password_hash"/>
        <result property="salt" column="salt"/>
        <result property="email" column="email"/>
        <result property="nickname" column="nickname"/>
        <result property="avatarUrl" column="avatar_url"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="lastLoginAt" column="last_login_at"/>
    </resultMap>

    <select id="selectUserByUsername" parameterType="String" resultMap="UserResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <select id="selectUserByEmail" parameterType="String" resultMap="UserResultMap">
        SELECT * FROM users WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="com.example.wisper_one.Login.POJO.UserPo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users(username, email, public_id, password_hash, salt, nickname,vip, status, created_at, updated_at)
        VALUES(#{username}, #{email}, #{publicId}, #{passwordHash}, #{salt}, #{nickname},#{vip}, #{status}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="updateUser" parameterType="com.example.wisper_one.Login.POJO.UserPo">
        UPDATE users
        SET last_login_at = #{lastLoginAt}, updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <select id="existsByUsername" parameterType="String" resultType="int">
        SELECT COUNT(1) FROM users WHERE username = #{username}
    </select>

    <select id="existsByEmail" parameterType="String" resultType="int">
        SELECT COUNT(1) FROM users WHERE email = #{email}
    </select>

</mapper>
